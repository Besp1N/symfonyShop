{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container login-form">
        <h1>Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <div class="mt-2">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mt-2">
            {{ form_row(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mt-2">
            {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div>
            {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-check mt-2">
            <label class="mb-0">I agree to the terms</label>
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input' }}) }}
        </div>


        <button type="submit" class="btn btn-primary mt-3">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}