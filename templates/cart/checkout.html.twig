{% extends 'base.html.twig' %}

{% block body %}

    <div class="container rounded-container mt-2 d-flex justify-content-center">
        <div>
           <p class="display-2 text-white">Checkout!</p>
            <p class="display-4 text-white">Get your products</p>
        </div>
    </div>

    <div class="container">
        <div class="glass checkout-container">
            <p>You are going to buy</p>
            <div class="checkout-products">
            {% for product in products %}
                <ul>
                    <li>{{ product.name }} - {{ product.size }} - <span class="checkout-price">{{ product.price }} $</span></li>
                </ul>
             {% endfor %}
            </div>
            <div class="checkout-total">
                <p>Total - {{ total }}</p>
            </div>
        </div>

        <div class="checkout-method-container glass">
            <p>Select your checkout method</p>

            <div class="checkout-method">
                <ul>
                    <li class="method-option">
                        <label>Credit card</label>
                        <input type="radio" name="checkout-method" value="credit-card" checked>
                    </li>

                    <li class="method-option">
                        <label>Blik</label>
                        <input type="radio" name="checkout-method" value="blik">
                    </li>

                    <li class="method-option">
                        <label>Paypall</label>
                        <input type="radio" name="checkout-method" value="paypall">
                    </li>
                </ul>
            </div>
        </div>

        <div class="checkout-address glass">
            <p>Checkout address</p>
            <div class="checkout-select-address">Select your country</div>
            <select>
                <option class="checkout-country-option">Poland</option>
                <option class="checkout-country-option">USA</option>
                <option class="checkout-country-option">Germany</option>
            </select>
        </div>


    </div>

{% endblock %}