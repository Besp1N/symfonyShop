<header class="container">
    <nav class="grid">
        <div class="logo">Logo</div>
        <a href="{{ path('app_home') }}" class="home">Home</a>
        <a href="#" class="about">About</a>

        <form class="search" method="GET" action="#">
            <input type="text" autocomplete="off" name="query" placeholder="Search for a product">
            <button type="submit" class="btn btn-primary">Search</button>
        </form>

        {% if app.user %}
            <a href="{{ path('app_cart') }}" class="cart">Cart</a>
            <a href="#" class="your-account">Your Account</a>
            <a href="{{ path('app_logout') }}" class="logout-nav">Logout</a>
        {% else %}
            <a href="#" class="register">Register</a>
            <a href="{{ path('app_login') }}" class="login">Login</a>
        {% endif %}
    </nav>
</header>