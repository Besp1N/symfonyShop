{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="container rounded-container mt-2 d-flex justify-content-center">
        <div>
            <p class="display-4 text-white">Welcome to T-Shirt</p>
            <p class="display-4 text-white">Store</p>
        </div>
    </div>

    <div class="container rounded-top-shirts mt-5 d-flex justify-content-center">
        <p class="mb-0 text-center text-white">Top Products</p>
    </div>

    <div class="my-grid-container container">
        {% for product in products %}

            <div class="my-grid-item">
                <div class="my-card">
                    <a href="{{ path('app_home_show_one', {'product': product.id}) }}">
                        <img src="{{ asset(product.image) }}">
                    </a>
                    <div class="my-product-description">
                        <p>{{ product.brand }} - {{ product.price }}</p>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>


    <div class="container rounded-top-shirts mt-5 d-flex justify-content-center">
        <p class="mb-0 text-center text-white">Top Brands</p>
    </div>

    <div class="my-grid-container container">
        {% for brand in brands %}

            <a href="{{ path('app_search_brand', {'brand': brand['brand']}) }}">
                <div class="my-grid-item">
                    <div class="my-card">
                        <p style="font-size: 2rem">{{ brand['brand'] }}</p>
                    </div>
                </div>
            </a>

        {% endfor %}
    </div>

    <div class="container rounded-container mt-2 mb-5 d-flex justify-content-center">
        <p class="display-4 text-white">Contact me!</p>
        <p class="text-white contact-me">Github account: <a href="https://github.com/Besp1N"> Kacper Karabinowski</a></p>
        <p class="text-white contact-me">Mail: kackar87@wp.pl</p>
    </div>

{% endblock %}
